rules_version = '2';

// Règles de sécurité Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {

    // Règles pour les avatars utilisateurs
    match /users/{userId}/avatar/{fileName} {
      // Lecture : L'utilisateur ou tout le monde si profil public
      allow read: if true;

      // Écriture : Seulement le propriétaire
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Règles pour les fichiers privés utilisateurs
    match /users/{userId}/private/{allPaths=**} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId
                         && request.resource.size < 10 * 1024 * 1024;  // Max 10MB
    }

    // Règles pour les fichiers publics
    match /public/{allPaths=**} {
      // Lecture : Tout le monde
      allow read: if true;

      // Écriture : Utilisateurs authentifiés uniquement
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024;  // Max 10MB
    }

    // Règles pour les images de matchs (si besoin)
    match /matches/{matchId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Bloquer tout le reste par défaut
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
