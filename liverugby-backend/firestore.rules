// Règles de sécurité Firestore - LiveRugby Backend
// Version améliorée avec sécurité renforcée

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Fonction helper pour vérifier l'authentification
    function isAuthenticated() {
      return request.auth != null;
    }

    // Fonction helper pour vérifier le propriétaire
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Fonction helper pour valider les données utilisateur
    function isValidUserData() {
      return request.resource.data.keys().hasAll(['email', 'createdAt']) &&
             request.resource.data.email is string &&
             request.resource.data.email.size() > 0;
    }

    // Règles pour les utilisateurs
    match /users/{userId} {
      // L'utilisateur peut lire et écrire ses propres données
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && isValidUserData();
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);

      // Tout le monde peut lire les profils publics
      allow read: if resource.data.isPublic == true;
    }

    // Règles pour les matchs (cache API Rugby)
    match /matches/{matchDate} {
      // Lecture publique pour utilisateurs authentifiés
      allow read: if isAuthenticated();
      // Écriture seulement via Cloud Functions
      allow write: if false;
    }

    // Règles pour les ligues
    match /leagues/{leagueId} {
      // Lecture publique pour utilisateurs authentifiés
      allow read: if isAuthenticated();
      // Écriture seulement via Cloud Functions
      allow write: if false;
    }

    // Règles pour les événements live
    match /live-events/{eventId} {
      // Lecture publique pour utilisateurs authentifiés
      allow read: if isAuthenticated();
      // Écriture seulement via Cloud Functions
      allow write: if false;
    }

    // Règles pour les favoris utilisateurs
    match /users/{userId}/favorites/{favoriteId} {
      allow read, write: if isOwner(userId);
    }

    // Règles pour les données temporaires (utilisées par cleanOldData)
    match /temporaryData/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Règles pour les données privées
    match /private/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // Règles pour les données publiques
    match /public/{document=**} {
      allow read: if true;
      allow create, update: if isAuthenticated();
      allow delete: if false; // Seulement via Cloud Functions
    }

    // Bloquer tout le reste par défaut
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
